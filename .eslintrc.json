{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true
    },
    "extends": "plugin:react/recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "quotes": ["error","single"],
        "semi" : ["error","always"],
        "indent": ["error","tab"],
        "key-spacing": ["error", { "afterColon": true }],
        "comma-spacing": ["error", { "before": false, "after": true }]

    }
}
